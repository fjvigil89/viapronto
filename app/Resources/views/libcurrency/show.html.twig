{% extends 'base.html.twig' %}

{% block body %}
    <h1>Libcurrency</h1>

    <table>
        <tbody>
            <tr>
                <th>Currency</th>
                <td>{{ libCurrency.currency }}</td>
            </tr>
            <tr>
                <th>Currencyid</th>
                <td>{{ libCurrency.currencyid }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('libcurrency_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('libcurrency_edit', { 'currencyid': libCurrency.currencyid }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
