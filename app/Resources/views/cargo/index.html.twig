{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cargos list</h1>

    <table>
        <thead>
            <tr>
                <th>Flightnumber</th>
                <th>Airline</th>
                <th>Departurecountry</th>
                <th>Departurecity</th>
                <th>Destinationcountry</th>
                <th>Destinationcity</th>
                <th>Departuredatetime</th>
                <th>Arrivaldatetime</th>
                <th>Weightavailable</th>
                <th>Weightunit</th>
                <th>Cargoid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cargo in cargos %}
            <tr>
                <td><a href="{{ path('cargo_show', { 'cargoid': cargo.cargoid }) }}">{{ cargo.flightnumber }}</a></td>
                <td>{{ cargo.airline }}</td>
                <td>{{ cargo.departurecountry }}</td>
                <td>{{ cargo.departurecity }}</td>
                <td>{{ cargo.destinationcountry }}</td>
                <td>{{ cargo.destinationcity }}</td>
                <td>{% if cargo.departuredatetime %}{{ cargo.departuredatetime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if cargo.arrivaldatetime %}{{ cargo.arrivaldatetime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ cargo.weightavailable }}</td>
                <td>{{ cargo.weightunit }}</td>
                <td>{{ cargo.cargoid }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('cargo_show', { 'cargoid': cargo.cargoid }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('cargo_edit', { 'cargoid': cargo.cargoid }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cargo_new') }}">Create a new cargo</a>
        </li>
    </ul>
{% endblock %}
